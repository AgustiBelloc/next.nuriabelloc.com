            </li>
          {% else %}
            <li>
              <a href="{{ node.url | prepend: site.baseurl | prepend: site.url }}">
                {{ node.title }}
              </a>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}
      {% assign pages_list = nil %}
      {% assign group = nil %}
      </ul>
    </div>
